<?xml version="1.0" encoding="utf-8"?>
<!---->




<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll"
    android:background="@color/ghost_white"
    tools:context="com.example.truptibday.MainActivity">

    <com.luolc.emojirain.EmojiRainLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/group_emoji_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <VideoView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/videoBackground1"
        />
   <TextView
        android:id="@+id/welcomeBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Hello AdityaWadekar"
        android:textSize="@dimen/_20sdp"


        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/batman"
        android:visibility="visible"
         />
       <TextView
          android:id="@+id/contRead"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textColor="@color/black"
          android:text="Continue Reading..."
          android:layout_marginLeft="@dimen/_30sdp"
          android:layout_marginRight="@dimen/_30sdp"
          android:textSize="@dimen/_15sdp">

      </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:id="@+id/cardClick">

        <include
            android:id="@+id/cardView"
            layout="@layout/card1"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:outlineProvider="bounds"

            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp" />
    </RelativeLayout>

</LinearLayout>
    </com.luolc.emojirain.EmojiRainLayout>
</ScrollView>
